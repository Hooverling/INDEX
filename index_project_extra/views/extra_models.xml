<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--Mejora a Pantalla de búsqueda de Tipo Previo-->
<record id="index_project_extra.previo_search" model="ir.ui.view">
    <field name="name">custom.previo_search</field>
    <field name="model">custom.service.type</field>
    <field name="arch" type="xml">
    <tree string = "Tipo Previo">
         <field name="code" string ="Código" />
         <field name="name" string ="Nombre"/>
    </tree>
    </field>
</record>

<!--Action-->
<record id="custom_previo_action" model="ir.actions.act_window">
    <field name="name">Tipo Previo</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">custom.service.type</field>
    <field name="view_mode">tree,form</field>    
</record>

